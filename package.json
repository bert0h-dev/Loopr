{
  "name": "loopr",
  "type": "module",
  "version": "1.0.3",
  "description": "Un motor de calendario ligero y extensible, construido con Preact, que permite renderizar vistas y eventos de forma dinÃ¡mica.",
  "main": "dist/bundle.cjs.js",
  "module": "dist/bundle.esm.js",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "dev": "npm run clean && rollup -c -w",
    "build": "npm run clean && NODE_ENV=production rollup -c",
    "build:analyze": "npm run clean && NODE_ENV=production VITE_BUILD_ANALYZE=true rollup -c && echo 'Bundle analysis available at dist/bundle-stats.html'",
    "preview": "npm run build && npx serve dist/esm",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "perf:audit": "npm run build && echo 'ESM Build:' && ls -la dist/esm/ && echo 'CJS Build:' && ls -la dist/cjs/ && du -sh dist/*",
    "env:check": "node -e \"require('dotenv').config({path:'.env.local'}); console.log('ðŸ”§ Environment Variables:'); Object.keys(process.env).filter(key => key.startsWith('VITE_')).forEach(key => console.log(`${key}=${process.env[key]}`));\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bert0h-dev/Loopr.git"
  },
  "keywords": [
    "calendar",
    "preact",
    "lightweight",
    "component",
    "ui",
    "events",
    "views",
    "dynamic"
  ],
  "author": "Bert0h-dev (humberto.morales.14@hotmail.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bert0h-dev/Loopr/issues"
  },
  "homepage": "https://github.com/bert0h-dev/Loopr#readme",
  "dependencies": {
    "date-fns": "^4.1.0",
    "preact": "^10.26.9"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-image": "^3.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-url": "^8.0.2",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.0",
    "dotenv": "^17.2.1",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "postcss-custom-properties": "^14.0.6",
    "postcss-import": "^16.1.1",
    "postcss-mixins": "^12.1.2",
    "postcss-nested": "^7.0.2",
    "postcss-preset-env": "^10.2.4",
    "postcss-utilities": "^0.8.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.45.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-html": "^0.2.1",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-node-externals": "^8.0.1",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-serve": "^3.0.0",
    "rollup-plugin-visualizer": "^6.0.3"
  }
}
