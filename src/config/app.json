  "app": {
    "name": "Loopr Calendar",
    "version": "1.0.3",
    "description": "Un motor de calendario ligero y extensible",
    "author": "Bert0h-dev"
  },
  "features": {
    "multipleViews": true,
    "eventManagement": true,
    "customization": true,
    "responsive": true,
    "accessibility": true
  },
  "supportedLocales": [
    "es-MX",
    "es-ES",
    "en-US",
    "en-GB",
    "fr-FR",
    "de-DE",
    "pt-BR"
  ],
  "defaultSettings": {
    "view": "month",
    "startDay": 1,
    "timeFormat": "24h",
    "dateFormat": "dd/mm/yyyy",
    "showWeekNumbers": false,
    "highlightToday": true
  },
  "themes": {
