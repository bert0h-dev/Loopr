# Variables de Entorno - Loopr
# Copia este archivo como .env.local para desarrollo

# Entorno
NODE_ENV=development

# API Configuration
VITE_API_URL=http://localhost:3001
VITE_API_TIMEOUT=5000

# App Configuration
VITE_APP_NAME=Loopr
VITE_APP_VERSION=1.0.3
VITE_APP_DEBUG=true

# Calendar Configuration
VITE_DEFAULT_VIEW=month
VITE_ENABLE_TIME_SLOTS=true
VITE_MAX_EVENTS_PER_DAY=10

# Features Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_THEMES=true

# Development
VITE_DEV_PORT=3000
VITE_DEV_HOST=localhost
VITE_ENABLE_SOURCEMAPS=true

# Build Configuration
VITE_BUILD_ANALYZE=false
VITE_BUILD_MINIFY=true
